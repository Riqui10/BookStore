@page
@model BookStore.Pages.Books.StoreModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Book Store</title>
    <style>
        .book-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .book-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            width: 30%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            text-align: center;
        }

            .book-card img {
                max-width: 200px;
                height: 320px;
                border-radius: 5px;
            }

            .book-card h3 {
                margin-top: 10px;
                margin-bottom: 5px;
            }

            .book-card p {
                margin: 5px 0;
            }
    </style>
</head>
<body>
    <h1>Book Store</h1>
    <div class="book-container">
        @foreach (var book in Model.listBooks)
        {
            <div class="book-card">
                <img src="@book.coverImage" alt="@book.bookName" />
                <h3>@book.bookName</h3>
                <p>@book.author</p>
                <p>@book.publishYear</p>
            </div>
        }
    </div>
</body>
</html>





